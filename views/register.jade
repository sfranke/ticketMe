extends layout

block content
  .container#register
    - if (message.length >= 1)
      div.alert.alert-danger= message
    form.form-register#registerform(method='post')
      h2.form-register-heading Please register
      |     
      label.sr-only(for='inputName') Name
      |     
      input#inputName.form-control(type='text', name='name', placeholder='Name', required='true', autofocus='')
      |     
      label.sr-only(for='inputEmail') Email address
      |     
      input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='true')
      |     
      label.sr-only(for='inputPassword') Password
      |     
      input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='true')
      |     
      button.btn.btn-lg.btn-primary.btn-block(type='submit')#registerNow Register

  include footer
      